<h1 align="center">{{title}}</h1>
<div class="container-fluid form">
    <div class="row">
        <div class="col-sm-7 col-sm-offset-2">
            <form class="form-horizontal" action="/test/submit" method="post">
                <div class="form-group">
                    <label for="email" class="col-sm-2 control-label">Try it!</label>
                    <div class="col-sm-10">
                        <div class="input-group input-group-lg">
                            <input type="text" name="id"  class="form-control" placeholder="Try an email!">
                            <span class="input-group-btn">
                                    <button class="btn btn-default" type="submit" data-loading-text="Checking...">Check</button>
                                </span>
                        </div>
                    </div>
                </div>
            </form>
            <div class="response"></div>
        </div>
    </div>
</div>